# Adding in Energy Consumption and Expenditure Data
codes = ['CLRCB','CLRCV','DFRCB','DFRCV','ESRCB','ESRCV','HLRCB','HLRCV','KSRCB','KSRCV','NGRCB','NGRCV','PARCB','PARCP','PQRCB','PQRCV','TERCB','TERCD','TERCV','TERPB']

