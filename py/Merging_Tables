# Set working directory
os.chdir('/Users/Alia/Documents/Github/FinalProjectPPOL564/Raw_Data')
df = pd.read_csv("Funding_Eligibility.csv")
df.drop(df.tail(1).index,inplace=True)

df.head()

df['Fiscal Year'] = df['Fiscal Year'].str.replace('*', '').astype(int)
df['Total Program Funding'] = df['Total Program Funding'].str.replace('$', '')
df['Total Program Funding'] = df['Total Program Funding'].str.replace(',', '')
df['Federally Income-Eligible Households - Total'] = df['Federally Income-Eligible Households - Total'].str.replace(',', '')
df['State Income-Eligible Households - Total'] = df['State Income-Eligible Households - Total'].str.replace(',', '')

df.head()

df.dtypes

df['Grantee'] = df['Grantee'].astype('string')
df['Total Program Funding'] = df['Total Program Funding'].astype(str).astype(int)
df['Federally Income-Eligible Households - Total'] = df['Federally Income-Eligible Households - Total'].astype(int)
df['State Income-Eligible Households - Total'] = df['State Income-Eligible Households - Total'].astype(int)

df.dtypes

